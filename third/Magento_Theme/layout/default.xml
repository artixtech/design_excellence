<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<move element="minicart" destination="navigation.sections" after="-"/>
        <!-- <move element="authorization-link" destination="header-container" before="-"/> -->
        <!-- <move element="minicart" destination="nav-sections" before="-"/>  -->
        <move element="top.search" destination="header.panel"/>
        <move element="authorization-link-login" destination="header-wrapper" before="-"/>
        <move element="register-link" destination="header-wrapper" before="-"/>
        <move element="wishlist-link" destination="header-wrapper" before="-"/>
         <move element="account-link" destination="header-wrapper" before="-"/>
   
        <!-- <block class="Magento\Framework\View\Element\Template" name="header.panel" template="Magento_Theme::header.phtml" /> -->
        <!-- <block class="Magento\Framework\View\Element\Template" name="footer" template="Magento_Theme::footer.phtml" /> -->
        <referenceBlock name="header.links">
               <!-- Contact us Link -->
            <block class="Magento\Framework\View\Element\Html\Link" name="account.link" after="register-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">My Account</argument>
                    <argument name="path" xsi:type="string" translate="false">account</argument>
                </arguments>
            </block>

        <block class="Magento\Framework\View\Element\Html\Link" name="wishlist-link" after="register-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="false">My Wishlist</argument>
                <argument name="path" xsi:type="string" translate="false">wishlist</argument>

            </arguments>
        </block>
